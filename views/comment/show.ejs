<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">DBMS APP</p>
            
            <a class="btn btn-success" href="/post/<%= parentComment.posts[0] %>">Go Back</a>

            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <div class="caption-full">
                    <h4><a><%=parentComment.author%></a></h4>
                    <p><%= parentComment.text %></p>
                    <a class="btn btn-success" href="/comment/<%= parentComment._id %>/update">Update Comment</a>
                    <a class="btn btn-danger" href="/comment/delete/<%= parentComment._id %>">Delete Comment</a>
                    <a class="btn btn-success" href="/posts">See all posts</a>
                                            
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/comment/<%= parentComment._id %>/reply">Add New Reply on this comment!</a>
                </div>
                <hr>
                <% parentComment.childComments.forEach(function(childComment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= childComment.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= childComment.text%>  
                            </p>
                            <a class="btn btn-secondary" href="/comment/<%= childComment._id %>/reply">Reply on this reply</a>
                       <br>                            
                       <a class="btn btn-success" href="/comment/<%= childComment._id %>/update">Update this reply</a>
                       <a class="btn btn-danger" href="/comment/delete/<%=childComment._id %>">Delete this reply</a>
                       
                       <a class="btn btn-success" href="/comment/<%= childComment._id %>">Show all replies to this reply</a>
                    
                       <% childComment.childComments.forEach(function(childofchild){ %>
                             <div>
                                 <p>
                                    <strong><%= childofchild.author %></strong>
                                    <span class="pull-right">1000000 days ago</span>
                                    <p>
                                        <%= childofchild%>  
                                        <%= childofchild.text%>  
                                        
                                    </p>     
                                 </p>
                             </div>

                        <% }) %>        
                
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>
